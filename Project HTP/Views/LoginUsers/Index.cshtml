<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div class="Login">
        <img src="~/Image/icon_three_done.png" />
        <h2>Member Login</h2>

        <form>
            <i class="fas fa-envelope-o icon">  Email</i>
            <input type="email" name="email" placeholder="Email" />
            <i class="fas fa-key icon">  Password</i>
            <input type="password" name="pass" placeholder="******" />
            <div class="container">
                <input type="checkbox" name="check-box" id="check-box" />
                <label for="check-box"> Remember</label>
            </div>

            <input type="submit" name="" value="Login" />
            <br />
            <a href="#">Create Password</a>
        </form>
    </div>
</body>
