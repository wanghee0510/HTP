        background: rgba(0,0,0,0.3);
    }

    img {
        width: 70px;
        margin-top: -70px;
        padding-left: 100px
    }

    h2 {
        font: bold;
        padding: 0;
        margin: 0;
        text-align: center;
        color: blue;
        font-size: 25px;
        margin-bottom: 10px
    }

    .Login i {
        margin-left: 15px;
        margin-bottom: 10px;
        color: white;
        font-size: 15px;
        border-bottom: 2px solid white;
    }

    .Login input {
        width: 100%;
        margin-bottom: 20px;
    }

        .Login input[type="email"], input[type="password"] {
            border: none;
